<?php

$controller = new ProductManagementController();
if (!empty($_POST)) {
    switch (true) {
        case !empty($_POST[$controller::ADD_PRODUCT_POST_REQUEST]):
            $controller->addProduct();
            break;
        case !empty($_POST[$controller::UPDATE_PRODUCT_POST_REQUEST]):
            $controller->updateProduct();
            break;
        case !empty($_POST[$controller::DELETE_PRODUCT_POST_REQUEST]):
            $controller->deleteProduct();
            break;
        case !empty($_POST[$controller::ADD_BRAND_POST_REQUEST]):
            $controller->addBrand();
            break;
        case !empty($_POST[$controller::DELETE_BRAND_POST_REQUEST]):
            $controller->deleteBrand();
            break;
        case !empty($_POST[$controller::ADD_CATEGORY_POST_REQUEST]):
            $controller->addCategory();
            break;
        case !empty($_POST[$controller::DELETE_CATEGORY_POST_REQUEST]):
            $controller->deleteCategory();
            break;
        default:
            break;
    }
}

/** Always load the products, brands and categories on refresh. */
$controller->findProducts();
$controller->findBrands();
$controller->findCategories();

